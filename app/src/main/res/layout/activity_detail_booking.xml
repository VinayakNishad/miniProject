<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F9F9F9">

    <!-- Booking ID Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking ID:"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp" />
    <TextView
        android:id="@+id/textBookingId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:textSize="14sp" />

    <!-- Customer Name Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Name:"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp" />
    <TextView
        android:id="@+id/textCustomerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:textSize="14sp" />

    <!-- Activity Name Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Name:"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp" />
    <TextView
        android:id="@+id/textActivityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:textSize="14sp" />

    <!-- Date Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp" />
    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:textSize="14sp" />

    <!-- Start Time Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time:"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp" />
    <TextView
        android:id="@+id/textStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:textSize="14sp" />

    <!-- End Time Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Time:"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp" />
    <TextView
        android:id="@+id/textEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:textSize="14sp" />

    <!-- Duration Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration:"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp" />
    <TextView
        android:id="@+id/textDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:textSize="14sp" />

    <!-- Location Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp" />
    <TextView
        android:id="@+id/textLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/textDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:textSize="14sp" />

    <!-- User Phone Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Phone:"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp" />
    <TextView
        android:id="@+id/textUserPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:textSize="14sp" />

    <!-- User Address Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Address:"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp" />
    <TextView
        android:id="@+id/textUserAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:textSize="14sp" />

    <!-- User Email Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Email:"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp" />
    <TextView
        android:id="@+id/textUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:textSize="14sp" />

    <!-- Booking Date/Time Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking Date/Time:"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp" />
    <TextView
        android:id="@+id/textBookingDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:textSize="14sp" />

</LinearLayout>
