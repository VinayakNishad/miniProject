<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="MyThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#595959</item>
    </style>

    <style name="BackButtonActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="BackButtonActionBar.Fullscreen" parent="BackButtonActionBar">
        <item name="android:actionBarStyle">@style/Widget.BackButtonActionBar.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.AquaAdventure.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>